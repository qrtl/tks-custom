<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="project_activity_form" model="ir.ui.view">
        <field name="name">project.activity.form</field>
        <field name="model">project.activity</field>
        <field name="arch" type="xml">
            <form string="Project Activity">
                <sheet>
                    <group>
                        <group>
                            <field name="date" attrs="{'readonly': [('actual_stairs', '&gt;', 0)]}"/>
                            <field name="note"/>
                        </group>
                        <group>
                            <field name="project_id" attrs="{'readonly': [('actual_stairs', '&gt;', 0)]}"/>
                            <field name="task_id" domain="[('project_id','=',project_id)]" attrs="{'readonly': [('actual_stairs', '&gt;', 0)]}"/>
                            <field name="user_id" attrs="{'readonly': [('actual_stairs', '&gt;', 0)]}"/>
                        </group>
                        <group>
                            <field name="plan_stairs" attrs="{'readonly': [('actual_stairs', '&gt;', 0)]}"/>
                            <field name="plan_weight_stairs"/>
                            <field name="plan_output_amt"/>
                        </group>
                        <group>
                            <field name="actual_stairs"/>
                            <field name="actual_weight_stairs"/>
                            <field name="actual_output_amt"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="project_activity_tree" model="ir.ui.view">
        <field name="name">project.activity.tree</field>
        <field name="model">project.activity</field>
        <field name="arch" type="xml">
            <tree string="Activities" editable="top">
                <field name="project_id" attrs="{'readonly': [('actual_stairs', '&gt;', 0)]}"/>
                <field name="task_id" domain="[('project_id','=',project_id)]" attrs="{'readonly': [('actual_stairs', '&gt;', 0)]}"/>
                <field name="task_state"/>
                <field name="date" attrs="{'readonly': [('actual_stairs', '&gt;', 0)]}"/>
                <field name="user_id" attrs="{'readonly': [('actual_stairs', '&gt;', 0)]}"/>
                <field name="plan_stairs" attrs="{'readonly': [('actual_stairs', '&gt;', 0)]}"/>
                <field name="plan_weight_stairs"/>
                <field name="plan_output_amt"/>
                <field name="actual_stairs"/>
                <field name="actual_weight_stairs"/>
                <field name="actual_output_amt"/>
                <field name="note"/>
            </tree>
        </field>
    </record>

    <record id="project_activity_tree2" model="ir.ui.view">
        <field name="name">project.activity.tree2</field>
        <field name="model">project.activity</field>
        <field name="arch" type="xml">
            <tree string="Activities" editable="top">
                <field name="date" attrs="{'readonly': [('actual_stairs', '&gt;', 0)]}"/>
                <field name="user_id" attrs="{'readonly': [('actual_stairs', '&gt;', 0)]}"/>
                <field name="plan_stairs" attrs="{'readonly': [('actual_stairs', '&gt;', 0)]}"/>
                <field name="plan_weight_stairs"/>
                <field name="plan_output_amt"/>
                <field name="actual_stairs"/>
                <field name="actual_weight_stairs"/>
                <field name="actual_output_amt"/>
                <field name="note"/>
            </tree>
        </field>
    </record>

    <record id="project_activity_search" model="ir.ui.view">
        <field name="name">project.activity.search</field>
        <field name="model">project.activity</field>
        <field name="arch" type="xml">
            <search string="Activities">
                <field name="project_id"/>
                <field name="task_id"/>
                <field name="date"/>
                <field name="user_id"/>
                <field name="note"/>
                <filter string="My Records" name="my_records" domain="[('user_id','=',uid)]"/>
                <filter string="Open Tasks" name="open_tasks" domain="[('task_state','=','to_do')]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Project" name="project" context="{'group_by':'project_id'}"/>
                    <filter string="Task" name="task" context="{'group_by':'task_id'}"/>
                    <filter string="Date" name="date" context="{'group_by':'date'}"/>
                    <filter string="User" name="user" context="{'group_by':'user_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="open_project_activity" model="ir.actions.act_window">
        <field name="name">Project Activities</field>
        <field name="res_model">project.activity</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_open_tasks': 1}</field>
    </record>

    <menuitem action="open_project_activity"
              id="menu_project_activity"
              name="Project Activities"
              parent="project.menu_project_management"
              sequence="14"/>

</odoo>