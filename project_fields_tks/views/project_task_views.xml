<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="view_task_form2_inherited">
        <field name="name">project.task.form.inherited</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="hr_timesheet.view_task_form2_inherited" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='progress']" position="after">
                <field name="category_id"/>
                <field name="category_code" invisible="1"/>
                <field name="category_sequence" invisible="1"/>
                <label for="stairs" attrs="{'invisible':[('category_code','!=','quotation')]}"/>
                <div attrs="{'invisible':[('category_code','!=','quotation')]}">
                    <div class="o_row mr16">
                        <field name="stairs"/>
                        <span class="oe_form_field">sets&#160;</span>
                        <field name="weight_stairs" attrs="{'invisible':[('stairs','=',0)]}"/>
                        <span attrs="{'invisible':[('stairs','=',0)]}">kg</span>
                    </div>
                </div>
                <label for="handrail" attrs="{'invisible':[('category_code','!=','quotation')]}"/>
                <div attrs="{'invisible':[('category_code','!=','quotation')]}">
                    <div class="o_row mr16">
                        <field name="handrail"/>
                        <span class="oe_form_field">meters&#160;</span>
                        <field name="weight_handrail" attrs="{'invisible':[('handrail','=',0)]}"/>
                        <span attrs="{'invisible':[('handrail','=',0)]}">kg</span>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
