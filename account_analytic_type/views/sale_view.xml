<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_form_inherit" model="ir.ui.view">
        <field name="name">sale.order.form.inherited</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[2]/group/group[1]/field[@name='project_id']" position="after">
                <field name="analytic_type_id"/>
            </xpath>
            <xpath expr="//page[1]/field[1]/tree/field[@name='related_project_id']" position="after">
                <field name="analytic_type_id"/>
            </xpath>
            <xpath expr="//page[1]/field[1]/form/group/group[1]/field[@name='related_project_id']"
                position="after">
                <field name="analytic_type_id"/>
            </xpath>
        </field>
    </record>
    
    <record id="order_line_tree_inherit" model="ir.ui.view">
        <field name="name">sale.order.line.tree.inherited</field>
        <field name="model">sale.order.line</field>
        <field name="inherit_id" ref="sale.view_order_line_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='project_id']" position="after">
                <field name="analytic_type_id"/>
            </xpath>
        </field>
    </record>
</odoo>